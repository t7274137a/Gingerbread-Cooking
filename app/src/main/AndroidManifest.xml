<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gingerbreadcooking">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GingerbreadCooking"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Screens.CardActivity"
            android:exported="true" />
        <activity
            android:name=".Screens.VideoActivity"
            android:exported="false" />
        <activity
            android:name=".Screens.RecipieWebActivity"
            android:exported="true" />
        <activity
            android:name=".Screens.PrivacyStatementActivity"
            android:exported="true" />
        <activity
            android:name=".Screens.PrivacyActivity"
            android:exported="true" />
        <activity
            android:name=".SignupActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".AddRecipe"
            android:exported="false"
            android:label="@string/title_activity_add_recipe"
            android:theme="@style/Theme.GingerbreadCooking.NoActionBar" />
        <activity
            android:name=".Forum"
            android:exported="false"
            android:label="@string/title_activity_forum"
            android:theme="@style/Theme.GingerbreadCooking.NoActionBar" />
        <activity
            android:name=".FavouriteRecipes"
            android:exported="false"
            android:label="@string/title_activity_favourite_recipes"
            android:theme="@style/Theme.GingerbreadCooking.NoActionBar" />
        <activity
            android:name=".CurrentGroceries"
            android:exported="false"
            android:label="@string/title_activity_current_groceries"
            android:theme="@style/Theme.GingerbreadCooking.NoActionBar" />
        <activity
            android:name=".FindRecipes.RecipeFullView"
            android:exported="false"
            android:label="@string/title_activity_recipe_full_view"
            android:theme="@style/Theme.GingerbreadCooking.NoActionBar" />
        <activity
            android:name=".WeekMealPlan"
            android:exported="false"
            android:label="@string/title_activity_week_meal_plan"
            android:theme="@style/Theme.GingerbreadCooking.NoActionBar" />
        <activity
            android:name=".ShoppingList"
            android:exported="false"
            android:label="@string/title_activity_shopping_list"
            android:theme="@style/Theme.GingerbreadCooking.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>